@{
    ViewData["Title"] = "إدارة حسابات المستخدمين";
}

<div class="row">
    <!-- الشريط الجانبي -->
    <div class="col-md-3 mb-3">
        <div class="list-group shadow-sm rounded-3">
            <button class="list-group-item list-group-item-action active" data-section="users">
                <i class="bi bi-people-fill me-2"></i> عرض المستخدمين
            </button>
            <button class="list-group-item list-group-item-action" data-section="add">
                <i class="bi bi-person-plus-fill me-2"></i> إضافة مستخدم جديد
            </button>
            <button class="list-group-item list-group-item-action" data-section="password">
                <i class="bi bi-key-fill me-2"></i> تغيير كلمة السر
            </button>
        </div>
    </div>

    <!-- المحتوى الرئيسي -->
    <div class="col-md-9">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i> إدارة حسابات المستخدمين</h5>
            </div>
            <div class="card-body">
                <!-- عرض المستخدمين -->
                <div id="section-users" class="content-section">
                    <h6 class="mb-3">قائمة المستخدمين</h6>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>اسم المستخدم</th>
                                <th>البريد الإلكتروني</th>
                                <th>الدور</th>
                                <th>إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>admin</td>
                                <td>admin@email.com</td>
                                <td>مدير</td>
                                <td>
                                    <button class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> تعديل</button>
                                    <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> حذف</button>
                                </td>
                            </tr>
                            <tr>
                                <td>user1</td>
                                <td>user1@email.com</td>
                                <td>مستخدم</td>
                                <td>
                                    <button class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> تعديل</button>
                                    <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> حذف</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- إضافة مستخدم -->
                <div id="section-add" class="content-section d-none">
                    <h6 class="mb-3">إضافة مستخدم جديد</h6>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">اسم المستخدم</label>
                            <input type="text" class="form-control" placeholder="أدخل اسم المستخدم">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">البريد الإلكتروني</label>
                            <input type="email" class="form-control" placeholder="example@email.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">كلمة السر</label>
                            <input type="password" class="form-control" placeholder="••••••••">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">الدور</label>
                            <select class="form-select">
                                <option>مستخدم</option>
                                <option>مدير</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success"><i class="bi bi-check2-circle"></i> حفظ</button>
                    </form>
                </div>

                <!-- تغيير كلمة السر -->
                <div id="section-password" class="content-section d-none">
                    <h6 class="mb-3">تغيير كلمة السر</h6>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">اسم المستخدم</label>
                            <input type="text" class="form-control" placeholder="أدخل اسم المستخدم">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">كلمة السر الجديدة</label>
                            <input type="password" class="form-control" placeholder="••••••••">
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-key-fill"></i> تحديث</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JS للتحكم في عرض الأقسام -->
<script>
    document.querySelectorAll('.list-group-item').forEach(btn => {
        btn.addEventListener('click', function () {
            // إزالة active من الكل
            document.querySelectorAll('.list-group-item').forEach(el => el.classList.remove('active'));
            this.classList.add('active');

            // إخفاء كل الأقسام
            document.querySelectorAll('.content-section').forEach(sec => sec.classList.add('d-none'));

            // إظهار القسم المطلوب
            document.getElementById("section-" + this.dataset.section).classList.remove('d-none');
        });
    });
</script>
