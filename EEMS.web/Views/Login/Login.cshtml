@model EEMS.web.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>تسجيل الدخول</title>

    <!-- مكتبات CSS الخارجية -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- ملف CSS المحلي -->
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="card login-card">
            <div class="card-header">
                <h3><i class="fas fa-user-lock ms-2"></i>تسجيل الدخول</h3>
            </div>
            <div class="card-body">
                <div class="alert-container">
                    <div id="loginAlert" class="alert hidden" role="alert"></div>
                </div>

                <form id="loginForm" autocomplete="off">
                    <div class="form-group">
                        <label for="usernameInput" class="form-label">رقم الملف</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            <input type="text" id="usernameInput" name="Username" class="form-control" placeholder="أدخل رقم الملف" />
                        </div>
                    </div>

                    <div id="gateContainer" class="form-group hidden">
                        <label for="gatesDropdown" class="form-label">اختر البوابة</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-door-open"></i></span>
                            <select id="gatesDropdown" name="SelectedGate" class="form-select">
                                <option value="" disabled selected>-- اختر البوابة --</option>
                            </select>
                        </div>
                    </div>

                    <div id="passwordContainer" class="form-group hidden">
                        <label for="passwordInput" class="form-label">كلمة المرور</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" id="passwordInput" name="Password" class="form-control" placeholder="أدخل كلمة المرور" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-login" id="loginButton">
                        <span>تسجيل الدخول</span>
                        <span class="loading-spinner">
                            <i class="fas fa-spinner fa-spin"></i>
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- مكتبات JavaScript الخارجية -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ملف JavaScript المحلي -->
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>




