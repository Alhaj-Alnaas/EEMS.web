
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EEMS.web</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background-color: orange;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #fff;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover,
                .navbar-custom .dropdown-item:hover {
                    background-color: rgba(255,255,255,0.1);
                    border-radius: 5px;
                }

        body {
            direction: rtl;
            text-align: right;
        }

        /* وسط الشعار */
        .navbar-brand-centered {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        /* اسم المستخدم تحت زر الخروج */
        .user-info {
            font-size: 0.8rem;
            color: #ddd;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm mb-3">
            <div class="container-fluid">

                <!-- شعار النظام في الوسط -->
                <a class="navbar-brand navbar-brand-centered d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-lock-fill me-2"></i> نظام إدارة التصاريح
                </a>

                <!-- زر التوسيع للشاشات الصغيرة -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- الروابط -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> الرئيسية
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-door-open-fill me-1"></i> البوابات
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Gate" asp-action="Index">
                                        <i class="bi bi-list-ul me-1"></i> عرض البوابات
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Gate" asp-action="Create">
                                        <i class="bi bi-plus-circle me-1"></i> إضافة بوابة
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-file-earmark-text-fill me-1"></i> التصاريح
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Permit" asp-action="Index">
                                        <i class="bi bi-list-check me-1"></i> عرض التصاريح
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Permit" asp-action="Create">
                                        <i class="bi bi-plus-circle me-1"></i> إضافة تصريح
                                    </a>
                                </li>
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-people-fill me-1"></i> حسابات المستخدمين
                            </a>
                            <ul class="dropdown-menu">

                                <li>
                                    <a class="dropdown-item" asp-controller="UserManagement" asp-action="CreateUser">
                                        <i class="bi bi-person-plus-fill me-1"></i> إضافة مستخدم
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="UserManagement" asp-action="ViewUser">
                                        <i class="bi bi-list-ul me-1"></i> عرض وتعديل بيانات مستخدم
                                    </a>
                                </li>
                                
                                <li>
                                    <a class="dropdown-item" asp-controller="UserManagement" asp-action="ChangePassword">
                                        <i class="bi bi-key-fill me-1"></i> تغيير كلمة المرور
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- مربع البحث -->
                    <form class="d-flex me-3" method="get" asp-controller="Gate" asp-action="Search">
                        <input class="form-control me-2" type="search" name="query" placeholder="بحث سريع..." aria-label="بحث سريع">
                        <button class="btn btn-outline-light" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <!-- زر تسجيل الخروج مع اسم المستخدم -->
                    <div class="d-flex flex-column align-items-center">
                        <form asp-controller="Login" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-light">
                                <i class="bi bi-box-arrow-right"></i> تسجيل الخروج
                            </button>
                        </form>
                        <span class="user-info">@User.Identity?.Name</span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - EEMS.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
